<body>

    <div class="container wrapper">


        <div class="card bg-light mb-3">
            {{!-- "card bg-light mb-3" --}}
            <h1 class="card-title display-4 text-center">Burgers</h1>
            <div class="card-body mx-auto">
                <div class="row">
                    <div class="col-md-6 mx-auto">
                        <h2 class="display-8">Eaten Burger</h2>

                        <ul>
                            {{#each burgers}} {{#unless devoured}} {{>burgers/burger-block devoured=true}} {{/unless}} {{/each}}
                        </ul>
                    </div>
                    <div class="col-md-6 mx-auto">
                        <h2 class= "display-8">Uneaten Burger!</h2>

                        <ul>
                            {{#each burgers}} {{#if devoured}} {{>burgers/burger-block devoured=false}} {{/if}} {{/each}}
                        </ul>
                    </div>
                </div>
            </div>

        </div>




        <div class="card bg-light mb-3">
            <h2 class="card-title display-4 text-center">Add a Burger</h2>
            <div class="card-body mx-auto">
                <div class="row">
                    <form class="create-form">

                        <div class="form-group">
                            <label for="bur">Burger Name:</label>
                            <input type="text" id="bur" name="name">
                        </div>
                        <div class="form-group">
                            <label for="devoured">Devoured?</label>
                            <br>
                            <input type="radio" name="devoured" value="1" checked> Devoured!
                            <br>
                            <input type="radio" name="devoured" value="0"> Not Devoured!
                        </div>

                        <button type="submit" class="btn btn-outline-light">Add a Burger</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</body>